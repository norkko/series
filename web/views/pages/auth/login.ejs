<%- include ../../partials/meta %>
<style>a{font-size:14px;}</style>
<div class="container mt-5">
  <a href="/" class="text-blue">home</a>
  <h1 class="text-dark mb-5 pt-5">Sign in</h1>
  <div class="content custom-border bg-light">
    <form action="" method="post">
      <input type="hidden" name="_csrf" value="<%= csrfToken %>">
      <div class="form-group">
        <label for="username" class="text-dark float-left">Username</label>
        <input type="text" id="username" class="form-control" value="username" name="username" autocomplete="off" required>
      </div>
      <div class="form-group">
        <label for="password" class="text-dark float-left">Password</label>
        <input type="password" id="password" class="form-control" value="password" name="password" required>
      </div>
      <button type="submit" class="btn btn-success w-100">Sign In</button>
    </form>
  </div>
</div>

<div class="container mt-1">
  <div class="content custom-border bg-light">
    <a class="text-dark">Not registered? <a href="/register">Sign up.</a></a>
  </div>
</div>